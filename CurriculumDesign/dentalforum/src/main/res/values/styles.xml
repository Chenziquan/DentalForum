<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/them_color</item>
        <item name="colorPrimaryDark">@color/them_color</item>
        <item name="colorAccent">@color/them_color</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionOverflowButtonStyle">@style/DentalForumOverFlow</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:dropDownListViewStyle">@style/AppDropDownListViewStyle</item>
    </style>

    <style name="AppDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/divider_vertical</item>
        <item name="android:dividerHeight">@dimen/split_width</item>
    </style>

    <style name="DentalForumOverFlow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:src">@drawable/dentalforum_overflow</item>
    </style>

    <style name="WhiteBarThem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="frame_title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="frame_back">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/white_back</item>
    </style>

    <style name="frame_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="frame_edittext">
        <item name="android:textColor">@color/text_color_4d</item>
        <item name="android:textColorHint">@color/text_color_cc</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:paddingRight">@dimen/dp_4</item>
    </style>

    <style name="frame_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:animation">@anim/push_buttom_in</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="user_item_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="user_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_4d</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_marginLeft">@dimen/dp_4</item>
    </style>

    <style name="user_item_more">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="post_content_subtitle">
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:background">@drawable/corner_bg_white_dp2</item>
    </style>
</resources>
