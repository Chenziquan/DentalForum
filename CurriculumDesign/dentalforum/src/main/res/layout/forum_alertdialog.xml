<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/forum_alertdialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_4d"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/forum_alertdialog_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:textColor="@color/text_color_99"
        android:visibility="gone"
        android:textSize="@dimen/sp_12" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/corner_bg_gray_dp_18"
        app:divider="@drawable/divider_horizontal"
        app:showDividers="middle">

        <TextView
            android:id="@+id/forum_alertdialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color_80"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/forum_alertdialog_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color_66"
            android:textSize="@dimen/sp_13" />


    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>