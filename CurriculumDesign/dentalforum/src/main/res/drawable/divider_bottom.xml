<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--连体框颜色-->
    <item>
        <shape>
            <solid android:color="@color/split_color" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="@dimen/split_width">
        <!--设置只有底部有边框-->
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>